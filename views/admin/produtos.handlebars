<div class="row">
    <div class="col-md-10 mt-2">
        <h2>Lista de Produtos</h2>
    </div>
    <div class="col-md-2 mt-2">
        <a href="/admin/produtos/add" class="btn" style="background-color:#76FF03">Novo Produto</a>
    </div>
    <table class="table table-striped">
        <thead>
            <th scope="col">Nome</th>
            <th scope="col">Categoria</th>
            <th scope="col">Preço</th>
            <th scope="col">Descrição</th>
            <th scope="col">Imagem</th>
            <th colspan="3" scope="col">Ações</th>
        </thead>
        <tbody>
            {{#each produtos}}
                <tr>
                    <td scope="row">{{nome}}</td>
                    <td>{{categoria}}</td>
                    <td>{{preco}}</td>
                    <td>{{descricao}}</td>
                    <td>{{img_produto}}</td>
                </tr>
                {{else}}
                <tr>
                    <td colspan="6" class="text-center">Sem resgistros de produtos a serem exibidos</td>
                </tr>
            {{/each}}
        </tbody>
    </table>
    
</div>